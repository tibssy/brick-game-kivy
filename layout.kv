#:import CardTransition kivy.uix.screenmanager.CardTransition


<Block@Widget>
    visible: False
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.1, 0.5) if self.visible else (0, 0, 0, 0)
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -2
            spread_radius: 3, 3
            border_radius: [sp(6)] * 4
            blur_radius: sp(6)
        Color:
            rgba: app.secondary_accent if self.visible else (0, 0, 0, 0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [6]
        Color:
            rgba: app.primary_accent if self.visible else (0, 0, 0, 0)
        RoundedRectangle:
            size: self.size[0] * 0.9, self.size[1] * 0.9
            pos: self.pos[0] + self.size[0] * 0.05, self.pos[1] + self.size[1] * 0.05
            radius: [4]




<ImageButton@ButtonBehavior+Image>
    allow_stretch: True
    color: 0,0,0,1

<CustomButton@ButtonBehavior+Image>
    color: app.secondary_accent
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 0.5
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -2
            spread_radius: 2, 2
            border_radius: [sp(12)] * 4
            blur_radius: sp(12) if self.state == 'normal' else sp(3)
        Color:
            rgba: app.secondary_accent
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [sp(12)]
        Color:
            rgba: app.primary_background
        RoundedRectangle:
            size: [i - sp(6) for i in self.size]
            pos: [i + sp(3) for i in self.pos]
            radius: [sp(12)]


<MyLayout>:
